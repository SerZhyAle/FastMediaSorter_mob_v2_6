<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme (Day) -->
    <style name="Theme.FastMediaSorter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorPrimaryContainer">@color/green_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/green_700</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryContainer">@color/amber_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Error -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Surface -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <item name="colorSurfaceVariant">@color/gray_100</item>
        <item name="colorOnSurfaceVariant">@color/gray_700</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/gray_50</item>
        <item name="colorOnBackground">@color/gray_900</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/green_700</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Theme.FastMediaSorter.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="titleTextColor">?colorOnPrimary</item>
    </style>

    <!-- FAB Style -->
    <style name="Theme.FastMediaSorter.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="tint">?colorOnPrimary</item>
    </style>

    <!-- Card Style -->
    <style name="Theme.FastMediaSorter.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?colorSurface</item>
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/elevation_low</item>
    </style>

    <!-- List Item Style (Dense) -->
    <style name="Theme.FastMediaSorter.ListItem">
        <item name="android:paddingStart">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:minHeight">@dimen/list_item_height_dense</item>
    </style>

    <!-- Button Styles -->
    <style name="Theme.FastMediaSorter.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <style name="Theme.FastMediaSorter.Button.Text" parent="Widget.Material3.Button.TextButton">
    </style>

    <style name="Theme.FastMediaSorter.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <!-- Player Theme (Full-screen, dark) -->
    <style name="Theme.FastMediaSorter.Player" parent="Theme.FastMediaSorter">
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>
