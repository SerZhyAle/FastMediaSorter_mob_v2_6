<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.GeneralSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- Appearance Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appearance"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?colorPrimary"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <!-- Language Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="@string/language"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/dropdownLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:editable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Theme RadioGroup -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            android:layout_marginBottom="@dimen/spacing_tiny"/>

        <RadioGroup
            android:id="@+id/radioGroupTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_medium">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_light"
                android:layout_weight="1"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_dark"
                android:layout_weight="1"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_system"
                android:layout_weight="1"/>

        </RadioGroup>

        <!-- Display Mode Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutDisplayMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="@string/default_view_mode"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/dropdownDisplayMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:editable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorOutline"
            android:layout_marginVertical="@dimen/spacing_medium"/>

        <!-- Behavior Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/behavior"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?colorPrimary"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <!-- Show Hidden Files -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_hidden_files"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_hidden_files_description"
                    android:textSize="12sp"
                    android:textColor="?colorOnSurfaceVariant"/>

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchShowHiddenFiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Confirm Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirm_delete"
                android:textSize="14sp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchConfirmDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Confirm Move -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirm_move"
                android:textSize="14sp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchConfirmMove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Prevent Sleep During Playback -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prevent_sleep"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prevent_sleep_description"
                    android:textSize="12sp"
                    android:textColor="?colorOnSurfaceVariant"/>

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchPreventSleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorOutline"
            android:layout_marginVertical="@dimen/spacing_medium"/>

        <!-- Cache Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cache"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?colorPrimary"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <!-- Cache Size Display -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_cache_size"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/spacing_tiny"/>

        <TextView
            android:id="@+id/tvCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            tools:text="256 MB"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <!-- Clear Cache Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_cache"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <!-- Developer Options (Debug Only) -->
        <LinearLayout
            android:id="@+id/layoutDeveloperOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?colorOutline"
                android:layout_marginVertical="@dimen/spacing_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Options"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="?colorError"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateStressData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate 10k Files (Stress Test)"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textColor="?colorError"
                app:strokeColor="?colorError"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
