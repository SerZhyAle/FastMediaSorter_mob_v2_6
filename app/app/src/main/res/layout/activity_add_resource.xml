<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resource.AddResourceActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/add_resource"
            app:navigationIcon="@drawable/ic_close"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Section: Local -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/local_folder"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLocalFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_folder"
                        app:tint="?colorPrimary"
                        android:contentDescription="@string/local_folder"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/local_folder"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/local_folder_description"
                            android:textSize="12sp"
                            android:textColor="?colorOnSurfaceVariant"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?colorOnSurfaceVariant"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section: Network -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/network_share"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_normal"/>

            <!-- SMB -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSmb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_network"
                        app:tint="?colorPrimary"
                        android:contentDescription="@string/type_smb"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/type_smb"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/spacing_medium"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?colorOnSurfaceVariant"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SFTP -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSftp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ssh"
                        app:tint="?colorPrimary"
                        android:contentDescription="@string/type_sftp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/type_sftp"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/spacing_medium"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?colorOnSurfaceVariant"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FTP -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ftp"
                        app:tint="?colorPrimary"
                        android:contentDescription="@string/type_ftp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/type_ftp"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/spacing_medium"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?colorOnSurfaceVariant"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section: Cloud -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cloud_storage"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_normal"/>

            <!-- Google Drive -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGoogleDrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_google_drive"
                        android:contentDescription="@string/type_google_drive"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/type_google_drive"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/spacing_medium"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?colorOnSurfaceVariant"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- OneDrive -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOneDrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_onedrive"
                        android:contentDescription="@string/type_onedrive"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/type_onedrive"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/spacing_medium"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?colorOnSurfaceVariant"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Dropbox -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDropbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_dropbox"
                        android:contentDescription="@string/type_dropbox"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/type_dropbox"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/spacing_medium"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?colorOnSurfaceVariant"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
