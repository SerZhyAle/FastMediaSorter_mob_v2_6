<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_settings_title"
        android:textAppearance="?textAppearanceHeadlineSmall"
        android:layout_marginBottom="16dp" />

    <!-- Slideshow Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slideshow_settings"
        android:textAppearance="?textAppearanceTitleMedium"
        android:textColor="?colorPrimary"
        android:layout_marginTop="8dp" />

    <!-- Slideshow Interval -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/slideshow_interval"
                android:textAppearance="?textAppearanceBodyMedium" />

            <TextView
                android:id="@+id/tvIntervalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3s"
                android:textAppearance="?textAppearanceBodyMedium"
                android:textColor="?colorPrimary" />

        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="30"
            android:value="3"
            android:stepSize="1" />

    </LinearLayout>

    <!-- Random Order -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/random_order"
            android:textAppearance="?textAppearanceBodyMedium" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchRandomOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Controls Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/controls_settings"
        android:textAppearance="?textAppearanceTitleMedium"
        android:textColor="?colorPrimary"
        android:layout_marginTop="24dp" />

    <!-- Touch Zones Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enable_touch_zones"
            android:textAppearance="?textAppearanceBodyMedium" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTouchZones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

    <!-- Show Touch Zone Labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/show_touch_zone_labels"
            android:textAppearance="?textAppearanceBodyMedium" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchShowZoneLabels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>

    <!-- Video Section (visible only for video) -->
    <LinearLayout
        android:id="@+id/layoutVideoSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_settings"
            android:textAppearance="?textAppearanceTitleMedium"
            android:textColor="?colorPrimary"
            android:layout_marginTop="24dp" />

        <!-- Playback Speed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/playback_speed"
                    android:textAppearance="?textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/tvSpeedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0x"
                    android:textAppearance="?textAppearanceBodyMedium"
                    android:textColor="?colorPrimary" />

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0.25"
                android:valueTo="2"
                android:value="1"
                android:stepSize="0.25" />

        </LinearLayout>

        <!-- Repeat Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/repeat_mode"
                android:textAppearance="?textAppearanceBodyMedium" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleRepeatMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRepeatOff"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeat_off" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRepeatOne"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeat_one" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRepeatAll"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeat_all" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
