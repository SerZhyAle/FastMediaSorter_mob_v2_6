<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorSurface">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="@string/edit_image"
        app:navigationIcon="@drawable/ic_close"
        app:menu="@menu/menu_image_edit" />

    <!-- Image Preview -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black">

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="@string/image_preview"
            tools:src="@drawable/ic_image" />

        <!-- Crop Overlay (shown only in crop mode) -->
        <View
            android:id="@+id/cropOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Edit Tools Bottom Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tool Options Panel (changes based on selected tool) -->
            <FrameLayout
                android:id="@+id/layoutToolOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <!-- Rotate Options -->
                <LinearLayout
                    android:id="@+id/layoutRotateOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRotateLeft"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rotate_left_90"
                            app:icon="@drawable/ic_rotate_left" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRotateRight"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/rotate_right_90"
                            app:icon="@drawable/ic_rotate_right" />

                    </LinearLayout>

                    <!-- Fine rotation slider -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/fine_rotation"
                        android:textAppearance="?textAppearanceLabelMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderRotation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="-45"
                            android:valueTo="45"
                            android:value="0"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tvRotationValue"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="0Â°"
                            android:textAppearance="?textAppearanceLabelLarge"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Flip Options -->
                <LinearLayout
                    android:id="@+id/layoutFlipOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFlipHorizontal"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flip_horizontal"
                        app:icon="@drawable/ic_flip_horizontal" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFlipVertical"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/flip_vertical"
                        app:icon="@drawable/ic_flip_vertical" />

                </LinearLayout>

                <!-- Crop Options -->
                <LinearLayout
                    android:id="@+id/layoutCropOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aspect_ratio"
                        android:textAppearance="?textAppearanceLabelMedium" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupAspectRatio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFree"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aspect_free"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip1_1"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1:1" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip4_3"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:3" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip16_9"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16:9" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOriginal"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aspect_original" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <!-- Filter Options -->
                <LinearLayout
                    android:id="@+id/layoutFilterOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFilters"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_filter_preview" />

                </LinearLayout>

                <!-- Adjust Options -->
                <LinearLayout
                    android:id="@+id/layoutAdjustOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <!-- Brightness -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_brightness"
                            android:contentDescription="@string/brightness"
                            app:tint="?colorOnSurface" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderBrightness"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:valueFrom="-100"
                            android:valueTo="100"
                            android:value="0" />

                        <TextView
                            android:id="@+id/tvBrightnessValue"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Contrast -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_contrast"
                            android:contentDescription="@string/contrast"
                            app:tint="?colorOnSurface" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderContrast"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:valueFrom="-100"
                            android:valueTo="100"
                            android:value="0" />

                        <TextView
                            android:id="@+id/tvContrastValue"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Saturation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_saturation"
                            android:contentDescription="@string/saturation"
                            app:tint="?colorOnSurface" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderSaturation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:valueFrom="-100"
                            android:valueTo="100"
                            android:value="0" />

                        <TextView
                            android:id="@+id/tvSaturationValue"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Tool Selection Bar -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRotate"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rotate"
                        app:icon="@drawable/ic_rotate_right" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFlip"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flip"
                        app:icon="@drawable/ic_flip_horizontal" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCrop"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/crop"
                        app:icon="@drawable/ic_crop" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilter"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter"
                        app:icon="@drawable/ic_filter" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAdjust"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adjust"
                        app:icon="@drawable/ic_tune" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
