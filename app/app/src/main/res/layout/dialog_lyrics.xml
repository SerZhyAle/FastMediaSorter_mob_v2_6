<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:navigationIcon="@drawable/ic_close"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:subtitleTextAppearance="@style/TextAppearance.Material3.BodySmall"
        tools:title="Song Title"
        tools:subtitle="Artist Name">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <!-- Copy Button -->
            <ImageButton
                android:id="@+id/btnCopyLyrics"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/copy_lyrics"
                android:src="@drawable/ic_copy"
                android:enabled="false"
                app:tint="?attr/colorOnSurface" />

            <!-- Translate Button -->
            <ImageButton
                android:id="@+id/btnTranslate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/translate"
                android:src="@drawable/ic_translate"
                android:enabled="false"
                app:tint="?attr/colorOnSurface" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant" />

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="300dp">

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Lyrics Content -->
        <ScrollView
            android:id="@+id/lyricsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Lyrics Source Indicator -->
                <TextView
                    android:id="@+id/tvLyricsSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="?attr/colorPrimary"
                    android:visibility="gone"
                    tools:text="Source: LRC file"
                    tools:visibility="visible" />

                <!-- Lyrics Text -->
                <TextView
                    android:id="@+id/tvLyrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.4"
                    android:textIsSelectable="true"
                    tools:text="This is sample lyrics text\nLine 2 of the lyrics\nLine 3 of the lyrics\n\n[Chorus]\nChorus lyrics here\nMore chorus lyrics" />

            </LinearLayout>

        </ScrollView>

        <!-- No Lyrics Message -->
        <LinearLayout
            android:id="@+id/noLyricsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"
            tools:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_music_note"
                app:tint="?attr/colorOutline"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tvNoLyrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lyrics_not_found"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/lyrics_not_found_hint"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOutline"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
