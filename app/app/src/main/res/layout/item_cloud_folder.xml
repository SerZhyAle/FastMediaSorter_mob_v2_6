<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    style="@style/Widget.Material3.CardView.Filled">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Folder icon -->
        <ImageView
            android:id="@+id/ivFolderIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_folder"
            app:tint="?colorPrimary"
            android:contentDescription="@string/folder"/>

        <!-- Folder info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp">

            <TextView
                android:id="@+id/tvFolderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodyLarge"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Photos"/>

            <TextView
                android:id="@+id/tvFolderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodySmall"
                android:textColor="?colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="middle"
                android:visibility="gone"
                tools:text="abc123def456"/>

        </LinearLayout>

        <!-- Navigate into folder button -->
        <ImageButton
            android:id="@+id/btnNavigate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chevron_right"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="?colorOnSurfaceVariant"
            android:contentDescription="@string/navigate_into_folder"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
