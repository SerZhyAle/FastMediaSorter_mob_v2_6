<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorSurface">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="@string/edit_gif"
        app:navigationIcon="@drawable/ic_close"
        app:menu="@menu/menu_gif_edit" />

    <!-- GIF Preview -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black">

        <ImageView
            android:id="@+id/ivGifPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="@string/gif_preview"
            tools:src="@drawable/ic_gif" />

        <!-- Frame indicator -->
        <TextView
            android:id="@+id/tvFrameIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_chip"
            android:textAppearance="?textAppearanceLabelMedium"
            android:textColor="@color/white"
            tools:text="Frame 1/24" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Frame Timeline -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Frame Thumbnails -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFrames"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_gif_frame" />

            <!-- Frame navigation controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFirstFrame"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_skip_previous"
                    android:contentDescription="@string/first_frame" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPreviousFrame"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_navigate_before"
                    android:contentDescription="@string/previous_frame" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlayPause"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_play"
                    android:contentDescription="@string/play" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextFrame"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_navigate_next"
                    android:contentDescription="@string/next_frame" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLastFrame"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_skip_next"
                    android:contentDescription="@string/last_frame" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Edit Options -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Speed Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playback_speed"
                android:textAppearance="?textAppearanceLabelMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.25x"
                    android:textAppearance="?textAppearanceBodySmall" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderSpeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:valueFrom="0.25"
                    android:valueTo="4"
                    android:value="1"
                    android:stepSize="0.25" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4x"
                    android:textAppearance="?textAppearanceBodySmall" />

                <TextView
                    android:id="@+id/tvSpeedValue"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="1.0x"
                    android:textAppearance="?textAppearanceLabelLarge"
                    android:textColor="?colorPrimary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Frame Range Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/frame_range"
                android:textAppearance="?textAppearanceLabelMedium" />

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/sliderFrameRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                app:values="@array/default_range_values" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStartFrame"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start: 1"
                    android:textAppearance="?textAppearanceBodySmall" />

                <TextView
                    android:id="@+id/tvEndFrame"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End: 24"
                    android:textAppearance="?textAppearanceBodySmall"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Loop Mode -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/loop_mode"
                    android:textAppearance="?textAppearanceBodyMedium" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleLoopMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLoopForward"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_repeat"
                        android:contentDescription="@string/loop_forward" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLoopBounce"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_swap_horiz"
                        android:contentDescription="@string/loop_bounce" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLoopOnce"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_repeat_one"
                        android:contentDescription="@string/play_once" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
