<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.browse.BrowseActivity">

    <!-- Top Control Buttons Bar -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorControlNormal" />

        <!-- Small space after Back -->
        <Space
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <!-- Sort -->
        <ImageButton
            android:id="@+id/btnSort"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/sort"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="?attr/colorControlNormal" />

        <!-- Filter (with badge) -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">
            
            <ImageButton
                android:id="@+id/btnFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/filter"
                android:src="@android:drawable/ic_menu_search"
                app:tint="?attr/colorControlNormal" />
            
            <TextView
                android:id="@+id/tvFilterBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/badge_filter_background"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="3"
                tools:visibility="visible" />
        </FrameLayout>

        <!-- Refresh -->
        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/refresh"
            android:src="@android:drawable/ic_popup_sync"
            app:tint="?attr/colorControlNormal" />

        <!-- Grid/List toggle -->
        <ImageButton
            android:id="@+id/btnToggleView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_view"
            android:src="@drawable/ic_view_grid"
            app:tint="?attr/colorControlNormal" />

        <!-- Small space -->
        <Space
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <!-- Select All -->
        <ImageButton
            android:id="@+id/btnSelectAll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/select_all"
            android:src="@drawable/ic_select_all"
            app:tint="?attr/colorControlNormal" />

        <!-- Deselect All -->
        <ImageButton
            android:id="@+id/btnDeselectAll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/deselect_all"
            android:src="@drawable/ic_deselect_all"
            app:tint="?attr/colorControlNormal" />

        <!-- Small space -->
        <Space
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <!-- Play/Slideshow -->
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/play"
            android:src="@android:drawable/ic_media_play"
            app:tint="?attr/colorControlNormal" />

    </LinearLayout>

    <!-- Resource Info Bar -->
    <TextView
        android:id="@+id/tvResourceInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/layoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Downloads • /storage/emulated/0/Download • 0 selected" />

    <!-- Main RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMediaFiles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:fadeScrollbars="false"
        android:clipToPadding="false"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        app:layout_constraintTop_toBottomOf="@id/tvResourceInfo"
        app:layout_constraintBottom_toTopOf="@id/layoutOperations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_media_file" />

    <!-- Scroll to Top button -->
    <ImageButton
        android:id="@+id/fabScrollToTop"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_scroll_button"
        android:contentDescription="@string/scroll_to_top"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/ic_arrow_upward"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvResourceInfo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <!-- Scroll to Bottom button -->
    <ImageButton
        android:id="@+id/fabScrollToBottom"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_scroll_button"
        android:contentDescription="@string/scroll_to_bottom"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/ic_arrow_downward"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/layoutOperations"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <!-- Empty state view -->
    <LinearLayout
        android:id="@+id/emptyStateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvMediaFiles"
        app:layout_constraintBottom_toBottomOf="@id/rvMediaFiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_image"
            android:contentDescription="@null"
            android:alpha="0.6"
            app:tint="?colorOnSurfaceVariant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/no_files"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:alpha="0.6" />
    </LinearLayout>

    <!-- Error state view -->
    <LinearLayout
        android:id="@+id/errorStateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@android:drawable/stat_notify_error"
            android:contentDescription="@string/error"
            app:tint="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/error_connection_failed"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/action_retry"
            style="@style/Widget.Material3.Button.TextButton" />
    </LinearLayout>

    <!-- Operations bar at bottom -->
    <LinearLayout
        android:id="@+id/layoutOperations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/tvFilterWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Copy -->
        <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_copy"
            android:src="@drawable/ic_copy"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal" />

        <!-- Move -->
        <ImageButton
            android:id="@+id/btnMove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_move"
            android:src="@drawable/ic_move"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal" />

        <!-- Rename -->
        <ImageButton
            android:id="@+id/btnRename"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/rename"
            android:src="@drawable/ic_edit"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal" />

        <!-- Delete -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_delete"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal" />

        <!-- Undo -->
        <ImageButton
            android:id="@+id/btnUndo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_undo"
            android:src="@drawable/ic_undo"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal" />

        <!-- Share -->
        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/share"
            android:src="@drawable/ic_share"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal" />

    </LinearLayout>

    <!-- Filter Warning at bottom -->
    <TextView
        android:id="@+id/tvFilterWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="12sp"
        android:textColor="@android:color/holo_orange_dark"
        android:background="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="⚠ Filter active: name contains 'photo'"
        tools:visibility="visible" />

    <!-- Progress layout with Stop button -->
    <LinearLayout
        android:id="@+id/layoutProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/loading" />

        <TextView
            android:id="@+id/tvProgressMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            android:maxLines="1"
            android:maxWidth="250dp"
            tools:text="Loading (12345)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStopScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/stop"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
