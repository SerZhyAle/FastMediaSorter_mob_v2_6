<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Night Theme -->
    <style name="Theme.FastMediaSorter" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/green_200</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorPrimaryContainer">@color/green_700</item>
        <item name="colorOnPrimary">@color/green_700</item>
        <item name="colorOnPrimaryContainer">@color/green_200</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryContainer">@color/amber_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Error -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/black</item>

        <!-- Surface -->
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorOnSurface">@color/gray_100</item>
        <item name="colorSurfaceVariant">@color/gray_800</item>
        <item name="colorOnSurfaceVariant">@color/gray_300</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/gray_100</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
    </style>

</resources>
