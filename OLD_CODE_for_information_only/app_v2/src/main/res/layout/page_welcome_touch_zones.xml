<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/welcome_title_2"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutSchemeAndLegend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Touch Zones Scheme (Left) -->
        <ImageView
            android:id="@+id/ivTouchZonesScheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/welcome_title_2"
            android:scaleType="fitCenter"
            android:src="@drawable/touch_zones_scheme" />

        <!-- Legend (Right) -->
        <ScrollView
            android:id="@+id/svLegend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_0_legend"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_1_back"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_2_copy"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_3_rename"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_4_previous"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_5_move"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_6_next"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_7_command"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_8_delete"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_9_slideshow"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="11sp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/welcome_description_2"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
