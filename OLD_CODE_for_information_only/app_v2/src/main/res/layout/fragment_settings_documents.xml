<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Text + PDF Row Container -->
        <LinearLayout
            android:id="@+id/containerTextPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <!-- Support Text (vertical container for Text + line numbers) -->
            <LinearLayout
                android:id="@+id/layoutSupportText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <!-- Support Text switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSupportText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/support_text_description"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Show Text Line Numbers (nested under Support Text) -->
                <LinearLayout
                    android:id="@+id/layoutShowTextLineNumbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:layout_marginStart="32dp"
                    android:visibility="gone">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchShowTextLineNumbers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/show_text_line_numbers"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Support PDF (vertical container for PDF + thumbnails) -->
            <LinearLayout
                android:id="@+id/layoutSupportPdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <!-- Support PDF switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSupportPdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/support_pdf_description"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Show PDF Thumbnails (nested under Support PDF) -->
                <LinearLayout
                    android:id="@+id/layoutShowPdfThumbnails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:layout_marginStart="32dp"
                    android:visibility="gone">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchShowPdfThumbnails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/show_pdf_thumbnails"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- EPUB Support Row -->
        <LinearLayout
            android:id="@+id/layoutSupportEpub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSupportEpub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/support_epub_description"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
