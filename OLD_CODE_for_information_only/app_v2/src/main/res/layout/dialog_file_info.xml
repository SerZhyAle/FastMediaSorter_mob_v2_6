<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:minWidth="320dp">

    <!-- Action buttons at top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenExternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/open_in_default_player"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownloadAndOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/download_and_open"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:text="@android:string/ok"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="500dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- File Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_info_section"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvFileDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvFileType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvFilePath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textIsSelectable="true"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="8dp" />

            <!-- Image EXIF Section -->
            <LinearLayout
                android:id="@+id/sectionExif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/exif_info_section"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textSize="18sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/tvExifDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvExifOrientation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvExifGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvImageResolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvExifCamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvExifISO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvExifAperture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvExifExposure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvExifFocalLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvGifFrames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Audio Metadata Section -->
            <LinearLayout
                android:id="@+id/sectionAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_info_section"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textSize="18sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/tvAudioDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvAudioCodecInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvAudioChannels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvAudioBitrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <!-- Video Metadata Section -->
            <LinearLayout
                android:id="@+id/sectionVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/video_info_section"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textSize="18sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/tvVideoDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvVideoResolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvVideoCodec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvVideoBitrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvVideoFrameRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvVideoRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvAudioCodec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvGpsLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:textColor="?attr/colorPrimary"
                    android:textIsSelectable="true"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Document Metadata Section (PDF/TXT/EPUB) -->
            <LinearLayout
                android:id="@+id/sectionDocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/document_info_section"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textSize="18sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp" />

                <!-- PDF: Page count -->
                <TextView
                    android:id="@+id/tvDocPageCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- EPUB: Title -->
                <TextView
                    android:id="@+id/tvDocTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- EPUB: Author -->
                <TextView
                    android:id="@+id/tvDocAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- EPUB: Chapter count -->
                <TextView
                    android:id="@+id/tvDocChapterCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- TXT: Line/word/char count -->
                <TextView
                    android:id="@+id/tvDocLineCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDocWordCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDocCharCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- TXT: Encoding -->
                <TextView
                    android:id="@+id/tvDocEncoding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- PDF: Version -->
                <TextView
                    android:id="@+id/tvPdfVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- PDF: Creator -->
                <TextView
                    android:id="@+id/tvPdfCreator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- PDF: Producer -->
                <TextView
                    android:id="@+id/tvPdfProducer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- PDF: Subject -->
                <TextView
                    android:id="@+id/tvPdfSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- PDF: Keywords -->
                <TextView
                    android:id="@+id/tvPdfKeywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- PDF: Creation Date -->
                <TextView
                    android:id="@+id/tvPdfCreationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <!-- PDF: Modification Date -->
                <TextView
                    android:id="@+id/tvPdfModDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
