<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <TextView
            android:id="@+id/tvResourceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/tvDestinationBadge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Downloads" />
        
        <TextView
            android:id="@+id/tvDestinationBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/badge_destination_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/tvDestinationMark"
            app:layout_constraintTop_toTopOf="@+id/tvResourceName"
            tools:text="5"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvDestinationMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/tvWritableIndicator"
            app:layout_constraintTop_toTopOf="@+id/tvResourceName"
            tools:text="â†’" />

        <TextView
            android:id="@+id/tvWritableIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="ðŸ”’"
            android:visibility="gone"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/tvAvailabilityIndicator"
            app:layout_constraintTop_toTopOf="@+id/tvResourceName"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvAvailabilityIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="N/A"
            android:textColor="?android:textColorSecondary"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnEdit"
            app:layout_constraintTop_toTopOf="@+id/tvResourceName"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvResourcePath"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:textColor="?android:textColorSecondary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@+id/tvResourceName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResourceName"
            tools:text="/storage/emulated/0/Download" />

        <TextView
            android:id="@+id/tvResourceComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textStyle="italic"
            android:textColor="?android:textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tvResourceName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResourcePath"
            tools:text="My backup folder"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivResourceTypeIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:contentDescription="Resource type icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResourceComment"
            tools:src="@android:drawable/ic_menu_view" />

        <TextView
            android:id="@+id/tvResourceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintStart_toEndOf="@+id/ivResourceTypeIcon"
            app:layout_constraintTop_toTopOf="@+id/ivResourceTypeIcon"
            app:layout_constraintBottom_toBottomOf="@+id/ivResourceTypeIcon"
            tools:text="LOCAL" />

        <TextView
            android:id="@+id/tvFileCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintStart_toEndOf="@+id/tvResourceType"
            app:layout_constraintTop_toTopOf="@+id/tvResourceType"
            tools:text="25 files" />

        <TextView
            android:id="@+id/tvMediaTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvFileCount"
            app:layout_constraintTop_toTopOf="@+id/tvResourceType"
            tools:text="IVAGTP" />

        <TextView
            android:id="@+id/tvLastSync"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:textColor="?android:textColorTertiary"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tvResourceName"
            app:layout_constraintStart_toStartOf="@+id/ivResourceTypeIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvResourceType"
            tools:text="Last sync: 2 hours ago"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvSpeedTestResults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:textColor="?android:textColorSecondary"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tvResourceName"
            app:layout_constraintStart_toStartOf="@+id/ivResourceTypeIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvLastSync"
            tools:text="Speed: R:50 W:30 Mbps T:2"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit"
            android:src="@android:drawable/ic_menu_edit"
            app:layout_constraintEnd_toStartOf="@+id/btnCopyFrom"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnCopyFrom"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy from this source"
            android:src="@android:drawable/ic_menu_upload"
            app:layout_constraintEnd_toStartOf="@+id/btnMoveUp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnMoveUp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Move Up"
            android:src="@android:drawable/arrow_up_float"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnMoveDown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Move Down"
            android:src="@android:drawable/arrow_down_float"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintTop_toBottomOf="@+id/btnMoveUp" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:src="@android:drawable/ic_menu_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Destination border (colored stroke) - placed after CardView to draw on top -->
    <View
        android:id="@+id/viewDestinationBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/destination_border"
        android:elevation="4dp"
        android:visibility="gone" />

</FrameLayout>