<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sort Mode Dropdown -->
        <!-- Sort Mode and Slideshow Interval (one row) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/default_sort_mode"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spinnerSortMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSlideshowInterval"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="@string/slideshow_interval"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/etSlideshowInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="5"
                    android:text="5"/>

            </com.google.android.material.textfield.TextInputLayout>
            
            <ImageButton
                android:id="@+id/iconHelpSlideshow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tooltip_slideshow_title"
                android:src="@android:drawable/ic_menu_help"
                android:tint="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Rename + PlayToEnd Row Container -->
        <LinearLayout
            android:id="@+id/containerRenamePlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/layoutPlayToEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginEnd="4dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPlayToEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/play_video_to_end"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAllowRename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="4dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAllowRename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/allow_rename"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Delete + ConfirmDelete Row Container -->
        <LinearLayout
            android:id="@+id/containerDeleteConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/layoutAllowDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginEnd="4dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAllowDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/allow_delete"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutConfirmDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="4dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchConfirmDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirm_delete"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Grid Mode and Icon Size in one row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchGridMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grid_mode"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilIconSize"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="@string/default_icon_size"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginStart="8dp">

                <AutoCompleteTextView
                    android:id="@+id/etIconSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="4"
                    android:text="96"/>

            </com.google.android.material.textfield.TextInputLayout>
            
            <ImageButton
                android:id="@+id/iconHelpGridSize"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tooltip_grid_size_title"
                android:src="@android:drawable/ic_menu_help"
                android:tint="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Hide Grid Action Buttons (sub-option under Grid Mode) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="36dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchHideGridActionButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hide_grid_action_buttons"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Command Panel + Detailed Errors (One Row) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <!-- Show Command Panel -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginEnd="8dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowCommandPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/show_command_panel_by_default"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Show Detailed Errors -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="8dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchDetailedErrors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/show_detailed_errors"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Player Hint + Touch Zones (One Row) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <!-- Show Player Hint -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginEnd="8dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowPlayerHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/show_player_hint"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Always Show Touch Zones -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="8dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAlwaysShowTouchZones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/always_show_touch_zones_overlay"
                    android:textSize="14sp" />
                
                <ImageButton
                    android:id="@+id/iconHelpTouchZones"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/tooltip_touch_zones_title"
                    android:src="@android:drawable/ic_menu_help"
                    android:tint="?android:attr/textColorSecondary" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/always_show_touch_zones_overlay_description"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Touch Zones Scheme Header and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/touch_zones_scheme"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShowHintNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_hint_now"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>

        <!-- Horizontal layout: Map (50%) + Legend (50%) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:contentDescription="@string/touch_zones_scheme"
                android:scaleType="fitCenter"
                android:src="@drawable/touch_zones_scheme"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zones_legend_title"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_1_back"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_2_copy"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_3_rename"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_4_previous"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_5_move"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_6_next"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_7_command"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_8_delete"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_zone_9_slideshow"
                    android:textSize="10sp"
                    android:lineSpacingMultiplier="1.2"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
