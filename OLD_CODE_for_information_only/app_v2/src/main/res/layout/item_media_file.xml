<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Thumbnail"
        android:background="?android:selectableItemBackground"
        app:layout_constraintStart_toEndOf="@id/cbSelect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCopyItem"
        app:layout_constraintStart_toEndOf="@+id/ivThumbnail"
        app:layout_constraintTop_toTopOf="@+id/ivThumbnail"
        app:layout_constraintBottom_toTopOf="@+id/tvFileInfo"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="IMG_20231106_123456.jpg" />

    <TextView
        android:id="@+id/tvFileInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/btnFavorite"
        app:layout_constraintStart_toStartOf="@+id/tvFileName"
        app:layout_constraintTop_toBottomOf="@+id/tvFileName"
        app:layout_constraintBottom_toBottomOf="@+id/ivThumbnail"
        tools:text="2.5 MB â€¢ 2023-11-06" />

    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Favorite"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@drawable/ic_star_outline"
        app:layout_constraintEnd_toStartOf="@+id/btnCopyItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Operation buttons row -->
    <ImageButton
        android:id="@+id/btnCopyItem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Copy"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@android:drawable/ic_menu_save"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnMoveItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnMoveItem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Move"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@android:drawable/ic_menu_revert"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnRenameItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnRenameItem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Rename"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@android:drawable/ic_menu_edit"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnDeleteItem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@android:drawable/ic_menu_delete"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
