<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- ========== IMAGES CATEGORY ========== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_category_images"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />
        <!-- Images + GIF Row Container -->
        <LinearLayout
            android:id="@+id/containerImagesGif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <!-- Support static images -->
            <LinearLayout
                android:id="@+id/layoutSupportImages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginEnd="4dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSupportImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/support_images_description"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Support GIF animation -->
            <LinearLayout
                android:id="@+id/layoutSupportGifs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="4dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSupportGifs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/support_gif_description"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Supported formats info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supported_image_formats"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginBottom="8dp" />

        <!-- Load full size images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchLoadFullSizeImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:checked="false" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/load_full_size_images"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_full_size_images_hint"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="8dp" />

        <!-- Image size limit (for both static and GIF) -->
        <TextView
            android:id="@+id/tvImageSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_and_animation_size_limit"
            android:textSize="14sp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutImageSizeInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min (KB)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etImageSizeMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="7" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max (KB)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etImageSizeMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="7" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="16dp" />

        <!-- ========== VIDEO CATEGORY ========== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_category_video"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Video Settings Container -->
        <LinearLayout
            android:id="@+id/containerVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Support video -->
            <LinearLayout
                android:id="@+id/layoutSupportVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSupportVideos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:checked="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/support_video_description"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supported_video_formats"
                    android:textSize="12sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginStart="48dp" />

            </LinearLayout>

            <!-- Show video thumbnails -->
            <LinearLayout
                android:id="@+id/layoutShowVideoThumbnails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="48dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowVideoThumbnails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/show_video_thumbnails"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvVideoSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_size_limit"
            android:textSize="14sp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutVideoSizeInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min (KB)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVideoSizeMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="7" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max (KB)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVideoSizeMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="7" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="16dp" />

        <!-- ========== AUDIO CATEGORY ========== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_category_audio"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Audio Settings Container -->
        <LinearLayout
            android:id="@+id/containerAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Support audio -->
            <LinearLayout
                android:id="@+id/layoutSupportAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSupportAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:checked="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/support_audio_description"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supported_audio_formats"
                    android:textSize="12sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginStart="48dp" />

            </LinearLayout>

            <!-- Search audio covers online -->
            <LinearLayout
                android:id="@+id/layoutSearchAudioCovers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="48dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSearchAudioCoversOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/search_audio_covers_online"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Search covers only on WiFi -->
            <LinearLayout
                android:id="@+id/layoutSearchCoversOnlyWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="72dp"
                android:visibility="gone">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSearchCoversOnlyWifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/search_covers_only_on_wifi"
                    android:textSize="14sp"
                    android:textColor="?android:textColorSecondary" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAudioSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio_size_limit"
            android:textSize="14sp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutAudioSizeInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min (MB)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAudioSizeMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="7" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max (MB)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAudioSizeMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="7" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="16dp" />

        <!-- ========== DOCUMENTS CATEGORY ========== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_category_documents"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Text + PDF Container -->
        <!-- Text + PDF Row Container -->
        <LinearLayout
            android:id="@+id/containerTextPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <!-- Support Text -->
            <LinearLayout
                android:id="@+id/layoutSupportText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginEnd="4dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSupportText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/support_text_description"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Support PDF (vertical container for PDF + thumbnails) -->
            <LinearLayout
                android:id="@+id/layoutSupportPdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <!-- Support PDF switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSupportPdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/support_pdf_description"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Show PDF Thumbnails (nested under Support PDF) -->
                <LinearLayout
                    android:id="@+id/layoutShowPdfThumbnails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:layout_marginStart="32dp"
                    android:visibility="gone">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchShowPdfThumbnails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/show_pdf_thumbnails"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="16dp" />

        <!-- ========== OTHER SETTINGS (Translation, OCR) ========== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_category_other"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Translation Settings (visible when supportPdf or supportText enabled) -->
        <LinearLayout
            android:id="@+id/layoutTranslationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">
            
            <!-- Enable Translation Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnableTranslation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_translation"
                    android:textSize="14sp" />

            </LinearLayout>
            
            <!-- Source Language Spinner -->
            <LinearLayout
                android:id="@+id/layoutTranslationSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="48dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/translation_source_language"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinnerSourceLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp" />

            </LinearLayout>
            
            <!-- Target Language Spinner -->
            <LinearLayout
                android:id="@+id/layoutTranslationTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="48dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/translation_target_language"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinnerTargetLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp" />

            </LinearLayout>
            
            <!-- Google Lens Style Switch -->
            <LinearLayout
                android:id="@+id/layoutTranslationLensStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="48dp"
                android:visibility="gone">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchTranslationLensStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/translation_lens_style"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Enable Google Lens Switch -->
            <LinearLayout
                android:id="@+id/layoutEnableGoogleLens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:layout_marginStart="48dp"
                android:visibility="gone">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnableGoogleLens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_google_lens"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Enable OCR Switch -->
            <LinearLayout
                android:id="@+id/layoutEnableOcr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="48dp"
                android:layout_marginStart="48dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchEnableOcr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/enable_ocr"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/enable_ocr_summary"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary" />

