<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Language -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:entries="@array/languages" />

        </LinearLayout>

        <!-- Prevent Sleep + Enable Favorites Container - adapts to horizontal in landscape -->
        <LinearLayout
            android:id="@+id/containerSleepFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="2dp">

            <!-- Enable Favorites -->
            <LinearLayout
                android:id="@+id/layoutEnableFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="36dp"
                android:layout_marginBottom="2dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnableFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_favorites"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Prevent Sleep -->
            <LinearLayout
                android:id="@+id/layoutPreventSleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="36dp"
                android:layout_marginBottom="2dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPreventSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/prevent_sleep"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Small Controls (Compact Mode) - independent setting -->
        <LinearLayout
            android:id="@+id/layoutSmallControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="36dp"
            android:layout_marginBottom="2dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSmallControls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/small_controls"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Enable Safe Mode -->
        <LinearLayout
            android:id="@+id/layoutEnableSafeMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="36dp"
            android:layout_marginBottom="2dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchEnableSafeMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:checked="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enable_safe_mode"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Confirm Delete + Move Container - adapts to horizontal in landscape -->
        <LinearLayout
            android:id="@+id/containerConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="2dp">

            <!-- Confirm Delete -->
            <LinearLayout
                android:id="@+id/layoutConfirmDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="36dp"
                android:layout_marginBottom="2dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchConfirmDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirm_delete_safe_mode"
                    android:textSize="14sp" />
                
                <ImageButton
                    android:id="@+id/iconHelpSafeMode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/tooltip_safe_mode_title"
                    android:src="@android:drawable/ic_menu_help"
                    android:tint="?android:attr/textColorSecondary" />

            </LinearLayout>

            <!-- Confirm Move -->
            <LinearLayout
                android:id="@+id/layoutConfirmMove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="36dp"
                android:layout_marginBottom="2dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchConfirmMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirm_move_safe_mode"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Network Parallelism -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/network_parallelism_summary"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNetworkParallelism"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:hint="@string/network_parallelism_title">

            <AutoCompleteTextView
                android:id="@+id/actvNetworkParallelism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="2"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Network Sync Container -->
        <LinearLayout
            android:id="@+id/containerSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="4dp">

            <!-- Enable Background Sync -->
            <LinearLayout
                android:id="@+id/layoutEnableSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="36dp"
                    android:layout_marginBottom="2dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchEnableBackgroundSync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:checked="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/enable_background_sync"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/background_sync_description"
                    android:textSize="12sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>

            <!-- Sync Interval + Sync Now Button -->
            <LinearLayout
                android:id="@+id/layoutSyncControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSyncInterval"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/sync_interval">

                    <AutoCompleteTextView
                        android:id="@+id/actvSyncInterval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="240"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSyncNow"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sync_now"
                    app:icon="@android:drawable/ic_popup_sync" />

            </LinearLayout>

        </LinearLayout>

        <!-- Default User and Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/default_user"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDefaultUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/default_password"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDefaultPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Export/Import Settings (one line) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportSettings"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/export_settings"
                app:icon="@android:drawable/ic_menu_upload" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnImportSettings"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/import_settings"
                app:icon="@android:drawable/ic_menu_revert" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/export_import_file_info"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp" />

        <!-- Permissions Container - adapts to horizontal in landscape -->
        <LinearLayout
            android:id="@+id/containerPermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLocalFilesPermission"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/grant_local_files_permission" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNetworkPermission"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/grant_network_permission" />

        </LinearLayout>

        <!-- Logs (one line) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShowLog"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/show_log" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShowSessionLog"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/show_current_session_log" />

        </LinearLayout>

        <!-- Cache Management Container -->
        <LinearLayout
            android:id="@+id/containerCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutCacheControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCacheSizeLimit"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:hint="@string/cache_size_limit">

                    <AutoCompleteTextView
                        android:id="@+id/actvCacheSizeLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="2048"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAutoCalculateCache"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/auto_calculate_cache"
                    app:icon="@android:drawable/ic_menu_manage" />

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/layoutCacheActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearCache"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/clear_cache"
                    app:icon="@android:drawable/ic_menu_delete" />

                <TextView
                    android:id="@+id/tvCacheSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cache_size_calculating"
                    android:textSize="14sp"
                    android:textColor="?android:textColorSecondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Documentation Links Container - horizontal layout -->
        <LinearLayout
            android:id="@+id/containerDocLinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUserGuide"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_guide"
                android:layout_marginEnd="16dp"
                app:icon="@android:drawable/ic_menu_help"
                app:iconSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrivacyPolicy"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconSize="18dp" />

        </LinearLayout>

        <!-- Version Info -->
        <TextView
            android:id="@+id/tvVersionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</ScrollView>
