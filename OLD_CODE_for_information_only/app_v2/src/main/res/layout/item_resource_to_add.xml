<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/cbAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@null"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cbAdd"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Downloads" />

        <TextView
            android:id="@+id/tvPath"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etName"
            app:layout_constraintTop_toBottomOf="@+id/etName"
            tools:text="/storage/emulated/0/Download" />

        <TextView
            android:id="@+id/tvFileCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintStart_toStartOf="@+id/etName"
            app:layout_constraintTop_toBottomOf="@+id/tvPath"
            tools:text="25 files" />

        <LinearLayout
            android:id="@+id/layoutMediaTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/tvFileCount"
            app:layout_constraintTop_toTopOf="@+id/tvFileCount"
            app:layout_constraintBottom_toBottomOf="@+id/tvFileCount">

            <TextView
                android:id="@+id/btnTypeImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="I"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btnTypeVideo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="V"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnTypeAudio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="A"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnTypeGif"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="G"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnTypeText"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="T"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnTypePdf"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="P"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/register_as_destination"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/etName"
            app:layout_constraintTop_toBottomOf="@+id/tvFileCount" />

        <CheckBox
            android:id="@+id/cbReadOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_only_mode"
            android:textSize="12sp"
            android:checked="false"
            app:layout_constraintStart_toStartOf="@+id/etName"
            app:layout_constraintTop_toBottomOf="@+id/cbDestination" />

        <CheckBox
            android:id="@+id/cbScanSubdirectories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_subdirectories"
            android:textSize="12sp"
            android:checked="true"
            app:layout_constraintStart_toStartOf="@+id/etName"
            app:layout_constraintTop_toBottomOf="@+id/cbReadOnly" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
