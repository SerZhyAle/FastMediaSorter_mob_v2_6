<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FastMediaSorter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors - Lighter blue for dark theme -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary colors - Lighter teal accent -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">@color/item_normal</item>
        <item name="colorSurface">@color/item_normal</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        
        <!-- Window background - dark for night mode -->
        <item name="android:windowBackground">@color/item_normal</item>
        <item name="android:windowSplashScreenBackground">@color/item_normal</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
    </style>

    <style name="Theme.FastMediaSorter.FullScreen" parent="Theme.FastMediaSorter">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.FastMediaSorter.NoActionBar" parent="Theme.FastMediaSorter">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
